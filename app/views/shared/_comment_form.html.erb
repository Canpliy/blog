<div class="comment-form">
  <%= form_for(comment) do |f| %>
    <div>
      <%= f.fields_for :review do |review| %>
        <%= f.hidden_field :review_id, value: comment.review_id %>
        <%= f.hidden_field :review_type, value: comment.review_type %>
      <% end %>
    </div>
    <div class="left-box">
      <%= f.text_field :name, value: '昵称' %>
      <%= f.text_field :email, value: '邮箱' %>
    </div>
    <div class="right-box">
      <%= f.text_area :content, value: '内容：' %>
    </div>
    <div class="submit">
      <%= f.submit '发布', class: "btn btn-success" %>        
    </div>
  <% end %>
</div>